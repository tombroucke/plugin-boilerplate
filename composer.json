{
    "name": "tombroucke/plugin-boilerplate",
    "description" : "Boilerplate for WordPress plugins",
    "license": "GNU GPLv3",
    "autoload": {
        "psr-4": {
            "Otomaties\\PluginBoilerplate\\": "app/"
        }
    },
    "authors": [
        {
            "name": "Tom Broucke",
            "email": "tom@tombroucke.be"
        }
    ],
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.6",
        "szepeviktor/phpstan-wordpress": "^1.1",
        "phpunit/phpunit": "^9.5",
        "php-stubs/acf-pro-stubs": "^6.0"
    },
    "scripts": {
        "test": [
            "phpcs --standard=PSR2 app views",
            "phpunit --colors=always --verbose",
            "vendor/bin/phpstan analyze app --memory-limit 512M"
        ]
    },
    "require": {
        "php": ">=8",
        "tombroucke/wp-models": "^1.0",
        "stoutlogic/acf-builder": "^1.12",
        "johnbillion/extended-cpts": "^5.0"
    }
}
